<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*.css" />
    <title>MRJ Commerce</title>
    <style>


        html {

    margin: auto;
  position: relative;
  min-height: 100%;
}
body {


  margin-bottom: 75px;
  

}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;

  height: 45px;
  line-height: 45px; 
  background-color: #343a40;
}

        .spacing{
        padding-left:10px;
        padding-right:10px;
        }



            .footer a {
                color: #ffffff;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #cccccc;
                }

        .auth-buttons {
            text-align: right;
            margin-top: 10px;
        }

        ul:not(.dropdown-menu) {
    display: flex;
    flex-wrap: wrap;
    zoom: 1;
 }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse justify-content-between" height="80" style="background-color: #646799;">

        <a class="navbar-brand text-white" href="@Url.Action("Index", "Homepage")">
            <img src="~/images/MRJ Commerce.png" asp-append-version="true"  alt="MRJ Commerce" height="80">
        </a>
    
        
        <form class="form-inline my-2 my-lg-0 d-flex" asp-controller="Product" asp-action="Search" method="get">
            <input class="form-control mr-sm-2" type="search" name="searchTerm" placeholder="Search MRJ Commerce" aria-label="Search" style="width: 300px;">
            
            <button class="btn btn-outline-light my-2 my-sm-0"  type="submit" style="padding: 0; width: 35px;">
                <i class="fa fa-search"></i>
            </button>
        </form>

        <a class="btn btn-dark" href="@Url.Action("Index", "Filter")"><span class="spacing">Filter</span></a>
       
        
        <a class="btn btn-dark" href="@Url.Action("", "")">Products</a>
        
        <a class="btn btn-dark" href="@Url.Action("Index", "Auction")">Auction</a> <!-- Added Access Auction button  4/26/23-->
        <a class="btn btn-dark" asp-controller="Account" asp-action="Create" role="button">Register</a>
       <a class="btn btn-dark" asp-controller="Account" asp-action="Login" role="button">Login</a>
   

            <div class="float-right">
                <div class="container">
            
            @await Component.InvokeAsync("CartSummary")
        </div>
        </div>
    </nav>

    
       

            @RenderBody()  


    <div class="footer">
        <div class="container">
            <div class="text-center">
                <a href="@Url.Action("Index", "Homepage")"><span class="spacing">Homepage</span></a>

                <a href="@Url.Action("Index", "FAQ")"><span class="spacing">FAQ</span></a>
                
                <a href="@Url.Action("Index", "Background")"><span class="spacing">Background</span></a>

                <a href="@Url.Action("Index", "Policy")"><span class="spacing">Policies</span></a>
                
            </div>
        </div>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
